<div class="container">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <%= render "follow_form" %>
  </aside>
  <div class="col-md-8 usersong">
    <p class="title"><%= t ".all_songs" %></p>
    <% @user.songs.each do |song| %>
      <li><%= link_to song.title, song %></li>
    <% end %>
  </div>
</div>
