<% if current_user.like song %>
  <%= link_to like_path(current_user.like(song)),
    method: :delete, remote: true, class: "btn btn-danger" do %>
    <i class="fa fa-heartbeat" aria-hidden="true"> <%= t "song.unlike" %> </i>
  <% end %>
<% else %>
  <%= link_to likes_path(song_id: song.id),
    method: :post, remote: true, class: "btn btn-default" do %>
    <i class="fa fa-heart-o" aria-hidden="true"> <%= t "song.like" %></i>
  <% end %>
<% end %>
<span class="btn btn-default disabled">
  <%= song.likes.count %>
</span>
