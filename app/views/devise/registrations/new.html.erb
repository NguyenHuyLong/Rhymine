<div class="rhymine-bg">
  <div class="panel panel-default devise-bs col-sm-6 col-sm-offset-3 td-fix-devise">
    <div class="row">
      <div class="panel-heading">
        <h2><%= t "registration.new.signup" %></h2>
        <%= form_for resource, as: resource_name,
          url: registration_path(resource_name) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em><%= t "registration.password",
                length: @minimum_password_length %></em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off",
              class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off",
              class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit t("registration.new.signup"),
              class: "btn btn-primary" %>
          </div>
        <% end %>
        <br>
      </div>
    </div>
  </div>
</div>
