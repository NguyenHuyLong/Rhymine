<h1><%= t "song.new.upload" %></h1>

<div class="col-md-6 col-md-offset-3">
  <%= form_for @song do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>

    <%= f.label :artist %>
    <%= f.text_field :artist, class: "form-control" %>

    <%= f.label :genre %>
    <%= f.select :genre_id, @genres.collect{|key| [key.name, key.id]},
      {include_blank: t("song.new.select")}, {class: 'form-control'} %>
    <br>

    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>

    <%= f.file_field :audio %>
    <br>

    <%= f.submit t("song.new.button"), class: "btn btn-primary" %>
  <% end %>
</div>
