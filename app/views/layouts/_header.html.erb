<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><%= link_to t("home"), root_path %></li>
          <% if current_user.is_admin? %>
            <li><%= link_to t("genres.name"), admins_genres_path %></li>
            <li><%= link_to t("page.home.user"), admins_users_path %></li>
            <li><%= link_to t("page.home.report"), admins_reports_path %></li>
          <% else %>
            <li><%= link_to t("page.home.upload"), new_song_path %></li>
            <li><%= link_to t("page.home.user"), users_path %></li>
          <% end %>
          <li><%= link_to t("page.home.song"), songs_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "page.home.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("page.home.profile"), current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("page.home.signout"), destroy_user_session_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("page.home.signin"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
